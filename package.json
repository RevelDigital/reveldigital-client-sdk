{
  "name": "@reveldigital/client-sdk",
  "version": "1.0.0",
  "author": "Mike Tinnes <mike@reveldigital.com>",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "clean": "rimraf dist",
    "build": "shx rm -rf ./dist && microbundle --tsconfig ./tsconfig.json  --format modern,cjs  --output dist/index.js && shx cp  ./dist/index.d.ts ./dist/index.d.cts",
    "type:check": "tsc --noEmit",
    "gen:docs": "rimraf docs/api && typedoc",
    "prepublishOnly": "pnpm build",
    "prepare": "lefthook install",
    "release": "pnpm run prepublishOnly && pnpm changeset publish"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^2.0.5",
    "babel-plugin-dev-expression": "^0.2.3",
    "babel-plugin-transform-define": "^2.1.4",
    "jsdom": "24.1.1",
    "lefthook": "^1.3.2",
    "microbundle": "^0.15.1",
    "prettier": "^3.3.3",
    "rimraf": "3.0.2",
    "shx": "^0.3.4",
    "typedoc": "^0.26.0",
    "typedoc-plugin-markdown": "^4.0.0",
    "typescript": "^5.3.3",
    "vite-plugin-babel": "^1.2.0"
  },
  "dependencies": {
    "vitest": "^2.0.5"
  }
}
